{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "pnpm"
  },
  "newProjectRoot": "projects",
  "projects": {
    "tailx": {
      "projectType": "library",
      "root": "projects/tailx",
      "sourceRoot": "projects/tailx/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/tailx/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/tailx/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/tailx/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/tailx/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/tailx/.storybook",
            "browserTarget": "tailx:build",
            "compodoc": false,
            "port": 6006,
            "styles": ["./projects/tailx/src/styles.scss"]
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/tailx/.storybook",
            "browserTarget": "tailx:build",
            "compodoc": false,
            "outputDir": "storybook-static",
            "styles": ["./projects/tailx/src/styles.scss"]
          }
        }
      }
    }
  }
}